{
  "name": "advent-of-code-2025",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json,css,prettierrc,eslintrc,html,babelrc}\"",
    "check:format": "prettier --check \"**/*.{js,jsx,ts,tsx,md,json,css,prettierrc,eslintrc,html,babelrc}\"",
    "check": "npm run type-check && npm run lint && npm run check:format"
  },
  "dependencies": {
    "@solidjs/meta": "^0.29.4",
    "@solidjs/router": "^0.15.0",
    "@solidjs/start": "^1.1.0",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.30.0",
    "solid-icons": "^1.1.0",
    "solid-js": "^1.9.5"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/prismjs": "^1.26.5",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-adpyke-es6": "^1.4.13",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-solid": "^0.14.5",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "prettier": "^3.7.3",
    "vite": "^7.2.6",
    "vite-plugin-solid": "^2.11.10"
  }
}
